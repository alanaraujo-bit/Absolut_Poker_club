// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Produto {
  id                     Int                     @id @default(autoincrement())
  nome                   String
  precoVenda            Decimal                 @map("preco_venda") @db.Decimal(10, 2)
  precoCusto            Decimal                 @map("preco_custo") @db.Decimal(10, 2)
  estoqueAtual          Int                     @default(0) @map("estoque_atual")
  estoqueMinimo         Int                     @default(10) @map("estoque_minimo")
  ativo                  Boolean                 @default(true)
  createdAt              DateTime                @default(now()) @map("created_at")
  updatedAt              DateTime                @updatedAt @map("updated_at")
  
  movimentacoes          EstoqueMovimentacao[]
  itensPedido            ItemPedido[]

  @@map("produtos")
}

model EstoqueMovimentacao {
  id                  Int       @id @default(autoincrement())
  produtoId           Int       @map("produto_id")
  tipo                String    // 'entrada' ou 'saida'
  quantidade          Int
  dataMovimentacao    DateTime  @default(now()) @map("data_movimentacao")
  observacao          String?
  
  produto             Produto   @relation(fields: [produtoId], references: [id])

  @@map("estoque_movimentacoes")
}

model Cliente {
  id              Int          @id @default(autoincrement())
  nome            String
  telefone        String?
  saldo           Decimal      @default(0) @db.Decimal(10, 2)  // negativo = deve, positivo = crédito
  ativo           Boolean      @default(true)
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")
  
  pedidos         Pedido[]
  movimentacoes   MovimentacaoCliente[]

  @@map("clientes")
}

model Pedido {
  id           Int          @id @default(autoincrement())
  clienteId    Int?         @map("cliente_id")
  dataPedido   DateTime     @default(now()) @map("data_pedido")
  valorTotal   Decimal      @map("valor_total") @db.Decimal(10, 2)
  pago         Boolean      @default(false)  // se foi pago à vista ou não
  
  cliente      Cliente?     @relation(fields: [clienteId], references: [id])
  itens        ItemPedido[]

  @@map("pedidos")
}

model MovimentacaoCliente {
  id              Int       @id @default(autoincrement())
  clienteId       Int       @map("cliente_id")
  tipo            String    // 'debito' (comprou fiado) ou 'credito' (pagou)
  valor           Decimal   @db.Decimal(10, 2)
  descricao       String
  dataMovimento   DateTime  @default(now()) @map("data_movimento")
  
  cliente         Cliente   @relation(fields: [clienteId], references: [id])

  @@map("movimentacoes_clientes")
}

model ItemPedido {
  id              Int       @id @default(autoincrement())
  pedidoId        Int       @map("pedido_id")
  produtoId       Int       @map("produto_id")
  quantidade      Int
  precoUnitario   Decimal   @map("preco_unitario") @db.Decimal(10, 2)
  subtotal        Decimal   @db.Decimal(10, 2)
  
  pedido          Pedido    @relation(fields: [pedidoId], references: [id])
  produto         Produto   @relation(fields: [produtoId], references: [id])

  @@map("itens_pedido")
}
