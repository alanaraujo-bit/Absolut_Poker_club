// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              Int       @id @default(autoincrement())
  nome            String
  username        String    @unique
  senha           String    // Armazenada com hash
  tipo            String    // 'admin' ou 'garcom'
  ativo           Boolean   @default(true)
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("usuarios")
}

model Produto {
  id                     Int                     @id @default(autoincrement())
  nome                   String
  precoVenda            Decimal                 @map("preco_venda") @db.Decimal(10, 2)
  precoCusto            Decimal?                @map("preco_custo") @db.Decimal(10, 2)
  unidadeMedida         String                  @default("unidade") @map("unidade_medida")
  estoqueAtual          Int                     @default(0) @map("estoque_atual")
  estoqueMinimo         Int                     @default(10) @map("estoque_minimo")
  ativo                  Boolean                 @default(true)
  createdAt              DateTime                @default(now()) @map("created_at")
  updatedAt              DateTime                @updatedAt @map("updated_at")
  
  movimentacoes          EstoqueMovimentacao[]
  itensPedido            ItemPedido[]
  itensComanda           ItemComanda[]

  @@map("produtos")
}

model EstoqueMovimentacao {
  id                  Int       @id @default(autoincrement())
  produtoId           Int       @map("produto_id")
  tipo                String    // 'entrada' ou 'saida'
  quantidade          Int
  dataMovimentacao    DateTime  @default(now()) @map("data_movimentacao")
  observacao          String?
  
  produto             Produto   @relation(fields: [produtoId], references: [id])

  @@map("estoque_movimentacoes")
}

model Cliente {
  id              Int          @id @default(autoincrement())
  nome            String
  cpf             String?      @unique
  telefone        String?
  saldo           Decimal      @default(0) @db.Decimal(10, 2)
  ativo           Boolean      @default(true)
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")
  
  comandas        Comanda[]

  @@map("clientes")
}

model Comanda {
  id              Int       @id @default(autoincrement())
  clienteId       Int       @map("cliente_id")
  garcomId        Int?      @map("garcom_id")  // quem abriu a comanda
  status          String    @default("aberta") // 'aberta' ou 'fechada'
  dataAbertura    DateTime  @default(now()) @map("data_abertura")
  dataFechamento  DateTime? @map("data_fechamento")
  valorTotal      Decimal   @default(0) @map("valor_total") @db.Decimal(10, 2)
  formaPagamento  String?   @map("forma_pagamento") // 'dinheiro', 'pix', 'cartao', etc
  observacao      String?
  
  cliente         Cliente   @relation(fields: [clienteId], references: [id])
  itens           ItemComanda[]

  @@map("comandas")
}

model ItemComanda {
  id              Int       @id @default(autoincrement())
  comandaId       Int       @map("comanda_id")
  produtoId       Int       @map("produto_id")
  quantidade      Decimal   @db.Decimal(10, 3)
  precoUnitario   Decimal   @map("preco_unitario") @db.Decimal(10, 2)
  subtotal        Decimal   @db.Decimal(10, 2)
  dataHora        DateTime  @default(now()) @map("data_hora")
  
  comanda         Comanda   @relation(fields: [comandaId], references: [id])
  produto         Produto   @relation(fields: [produtoId], references: [id])

  @@map("itens_comanda")
}

model Pedido {
  id           Int          @id @default(autoincrement())
  clienteId    Int?         @map("cliente_id")
  dataPedido   DateTime     @default(now()) @map("data_pedido")
  valorTotal   Decimal      @map("valor_total") @db.Decimal(10, 2)
  pago         Boolean      @default(false)
  
  itens        ItemPedido[]

  @@map("pedidos")
}

model ItemPedido {
  id              Int       @id @default(autoincrement())
  pedidoId        Int       @map("pedido_id")
  produtoId       Int       @map("produto_id")
  quantidade      Decimal   @db.Decimal(10, 3)
  precoUnitario   Decimal   @map("preco_unitario") @db.Decimal(10, 2)
  subtotal        Decimal   @db.Decimal(10, 2)
  
  pedido          Pedido    @relation(fields: [pedidoId], references: [id])
  produto         Produto   @relation(fields: [produtoId], references: [id])

  @@map("itens_pedido")
}

model DevUser {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  senha           String    // Hash da senha
  nome            String    @default("Developer")
  ativo           Boolean   @default(true)
  lastLogin       DateTime? @map("last_login")
  createdAt       DateTime  @default(now()) @map("created_at")

  @@map("dev_users")
}
